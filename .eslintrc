{
	"env": {
		"browser": true,
		"es6": true,
		"node": true
	},
	"parser": "babel-eslint",
	"extends": "airbnb",
	"rules": {
		"indent": [2, "tab", { "SwitchCase": 1, "VariableDeclarator": 1 }],
		"no-tabs": 0,
		"comma-dangle": ["error", "never"],
		"arrow-parens": ["error", "as-needed"],
		"operator-linebreak": ["error", "after"]
	}
}
